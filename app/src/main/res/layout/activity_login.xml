<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamtoriden.photome.Activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO"
        android:textSize="50sp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/idInput"
        android:hint="ID"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pwInput"
        android:layout_alignStart="@+id/pwInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/pwInput"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_below="@+id/idInput"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="로그인"
        android:id="@+id/loginButton"
        android:textAllCaps="false"
        android:onClick="LoginClicked"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pwInput"
        android:layout_toLeftOf="@+id/signupButton"
        android:layout_toStartOf="@+id/signupButton" />

    <Button
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="회원가입"
        android:id="@+id/signupButton"
        android:onClick="SignupClicked"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/loginButton"
        android:layout_alignRight="@+id/pwInput"
        android:layout_alignEnd="@+id/pwInput" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인 상태 유지"
        android:id="@+id/checkBox"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/loginButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:background="@color/colorPrimary"
        android:text="photoME in pyungchang"
        android:textColor="#FFFFFF"
        android:textAlignment="viewEnd"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>