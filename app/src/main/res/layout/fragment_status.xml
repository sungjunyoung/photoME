<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.teamtoriden.photome.Fragments.StatusFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="현재 수행도"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Status"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="성준영"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mid"

        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/mid"
        android:text=" in pyeongchang"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mid"
        android:layout_alignStart="@+id/mid"
        android:layout_below="@+id/mid"
        android:layout_marginTop="20dp"
        android:text="방문한 곳:  10/40"
        android:textSize="30sp" />

    <Button
        android:id="@+id/fb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="36dp"
        android:background="#ffffff"
        android:text="페이스북에 공유하기" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:text="**15곳 이상 방문 시 포토북 신청가능" />

    <Button
        android:id="@+id/photoBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fb"
        android:layout_toEndOf="@+id/fb"
        android:layout_toRightOf="@+id/fb"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:text="포토북 신청" />
</RelativeLayout>
